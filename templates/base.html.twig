<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Duncan
			{% endblock %}
		</title>
		<link href="https://fonts.googleapis.com/css?family=Carter+One|Roboto&display=swap" rel="stylesheet">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<div class="wrapper d-flex align-items-stretch">
			<nav id="sidebar">
				<div class="p-4 pt-3 avatar">
					<a href="{{ path('home')}}" class="mb-5">
						<img src="{{asset('build/images/profile.png')}}" alt="profile" class="img-fluid"/>
					</a>
				</div>
				<div class="p-4 pt-2">
					<ul class="list-unstyled components mb-5">
						<li>
							<a href="#">About</a>
						</li>
					</ul>
				</div>
			</nav>

			{% set locale = 'nl' %}
			{% if app.request.getLocale() is not empty and app.request.getLocale() == 'nl' %}
				{% set locale = 'en' %}
			{% endif %}

			<div class="bottom-fixed language-switcher">
				{{ 'Klik hier voor'|trans }} :
				<img src="{{asset('build/images/' ~ locale  ~'.png')}}" alt="{{locale}}" class="switch-language" data-language="{{locale}}"/>
			</div>
			<div id="content" class="container-fluid">
				<button type="button" id="sidebarCollapse" class="btn btn-primary d-lg-none">
					<i class="fa fa-bars"></i>
					<span class="sr-only">Toggle Menu</span>
				</button>

				{% block body %}{% endblock %}
			</div>
		</div>
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</body>
</html>
